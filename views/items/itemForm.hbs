<section class="form-section">

    <header class="form-section__header">
        <h1>Add item</h1>
    </header>

    <form action="/add-new-item" method="POST" class="form" enctype="multipart/form-data">

        {{#if errorMessage}}
        <p class="form__error">{{errorMessage}}</p>
        {{/if}}

        <div class="form__input-group">
            <label class="form__label" for="name" class="label-ref label">Name</label>
            <input class="form__input" id="name" type="text" name="name" placeholder="What are you giving away?">
        </div>

        <div class="form__input-group">
            <label class="form__label" for="category" class="label-ref label">Category</label>
            <select name="category" id="category" class="form__select">
                <option value="-1" disabled selected>Choose category</option>
                <option value="Plant">Plant</option>
                <option value="Kombucha">Kombucha</option>
                <option value="Vinegar">Vinegar</option>
                <option value="Kefir">Kefir</option>
            </select>
        </div>

        <div class="form__input-group">
            <label class="form__label" for="quantity" class="label-ref label">Quantity</label>
            <input class="form__input" id="quantity" type="number" name="quantity">
        </div>

        <div class="form__input-group">
            <label class="form__label" for="address" class="label-ref label">Address</label>
            <input class="form__input" id="address" type="string" name="address">
        </div>

        <div class="form__input-group">
            <label class="form__label" for="description" class="label-ref label">Description</label>
            <textarea class="form__text-area" id="description" name="description"
                rows="5">Tell us something about this item</textarea>
        </div>

        <div class="form__input-group">
            <label class="form__label" for="image" class="label-ref label">Image</label>
            <input class="form__input" id="image" type="file" name="image">
        </div>

        <h3>Contact information</h3>

        <div class="form__input-group">
            <label class="form__label" for="contact">How do you want to be reached?</label>
            <select name="contact" id="contact" class="form__select" required>
                <option value="-1" disabled selected>Choose a preferred contact</option>
                <option value=""></option>
                <option value=""></option>
                <option value=""></option>
            </select>
            <p><a href="">add phone number</a></p>
        </div>

        <button class="form__button" type="submit">Add item</button>
    </form>

    </div>